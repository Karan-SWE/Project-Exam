{
    "manifest_version": 2,
    "name": "Envisage Sec",
    "version": "1.0",
    "description": "Check if a website is safe using Google Safe Browsing API",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  